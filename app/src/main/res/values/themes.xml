<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mazad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    
    <style name="title_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:fontFamily">@font/tajawal_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_style_with_tajawal_bold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/tajawal_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_style_with_tajawal_medium">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/tajawal_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>